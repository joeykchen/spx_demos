var (
	bombs int
	score int
)

const (
	winscore = 500
)

const (
	msgBattle   = "battle"
	msgKillAll  = "kill all"
	msgYouWin   = "you win"
	msgGameOver = "game over"
	msgRestart  = "restart"
)

func addScore(val int) {
	score += val
	if score > winscore {
		broadcast msgYouWin
	}
}

func restart() {
	reload "index.json"
	GameStart.hide
	broadcast msgBattle
}
